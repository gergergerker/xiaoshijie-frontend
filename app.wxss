/**app.wxss**/
page {
  background-color: #e8f5e9;
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
  color: #333;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  padding: 30rpx;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #2e7d32;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.ancient-scrolls {
  border-left: 3rpx solid #a5d6a7;
  padding-left: 16rpx;
  margin: 20rpx 0;
}

/* Ancient style emojis and decorative elements */
.emoji-container {
  display: flex;
  justify-content: space-around;
  margin: 30rpx 0;
}

.ancient-emoji {
  font-size: 64rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ancient-emoji text {
  font-size: 24rpx;
  margin-top: 10rpx;
} 