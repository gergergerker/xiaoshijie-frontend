/* cloudDwelling页面样式 - 用户主页 */
.cloud-dwelling-container {
  min-height: 100vh;
  padding: 20rpx;
  background-color: #e8f5e9;
  position: relative;
  display: flex;
  flex-direction: column;
  font-family: "Source Han Serif", "思源宋体", "Noto Serif SC", serif;
}

/* 各区块通用样式 */
.user-profile-section, .season-display-section, .exploration-section, .activity-section, .footprints-section, .settings-section {
  padding: 24rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
}

/* 用户信息区域 */
.user-profile-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar-container {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #81c784, #4caf50);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.user-avatar {
  font-size: 70rpx;
  color: white;
  font-weight: bold;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.username-container {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}

.username {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-right: 8rpx;
}

.not-logged {
  color: #999;
  font-size: 26rpx;
}

button.login-button-inline {
  background: linear-gradient(135deg, #81c784, #4caf50);
  color: white;
  font-size: 22rpx;
  padding: 0 8rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  margin: 0 8rpx 0 4rpx;
  line-height: 1;
  min-height: 0;
  font-weight: normal;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx !important;
  box-sizing: border-box;
}

/* 用户操作按钮 */
.user-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 12rpx;
}

.settings-button, .membership-button {
  background: linear-gradient(135deg, #81c784, #4caf50);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  width: 170rpx;
  text-align: center;
}

.settings-button:active, .membership-button:active {
  transform: scale(0.97);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.user-stats {
  font-size: 24rpx;
  color: #4CAF50;
}

.tree-count-container {
  display: flex;
  align-items: center;
}

.login-state {
  margin-left: 4rpx;
}

.tree-count-total {
  background-color: rgba(76, 175, 80, 0.15);
  padding: 4rpx 10rpx;
  border-radius: 12rpx;
  font-weight: bold;
  font-size: 24rpx;
  display: inline-block;
  width: fit-content;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.05);
  height: 36rpx;
  line-height: 28rpx;
  box-sizing: border-box;
}

.tree-details-row {
  display: flex;
  font-size: 20rpx;
  margin-top: 6rpx;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tree-source {
  color: #555;
  background-color: rgba(76, 175, 80, 0.08);
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  display: inline-flex;
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.03);
}

/* 通用部分标题 */
.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2e7d32;
  margin-bottom: 12rpx;
  padding-left: 14rpx;
  border-left: 5rpx solid #4CAF50;
  line-height: 1.2;
  display: flex;
  align-items: center;
  height: 32rpx;
}

/* 时节展示区域 */
.season-display-section {
  /* 使用通用样式，这里无需额外定义 */
}

.current-season {
  display: flex;
  margin-bottom: 16rpx;
}

.season-image-container {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.season-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.season-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.season-header {
  display: flex;
  flex-direction: column;
  margin-bottom: 8rpx;
}

.season-name-date {
  display: flex;
  align-items: baseline;
  margin-bottom: 6rpx;
}

.season-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 12rpx;
}

.season-date {
  font-size: 22rpx;
  color: #666;
}

.season-countdown {
  font-size: 20rpx;
  color: #2e7d32;
  background-color: rgba(76, 175, 80, 0.1);
  padding: 4rpx 10rpx;
  border-radius: 16rpx;
  display: inline-block;
  margin-bottom: 8rpx;
}

.season-description {
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
}

.season-quote {
  font-size: 24rpx;
  color: #666;
  font-style: italic;
  text-align: center;
  padding: 16rpx 0;
  line-height: 1.6;
}

/* 时节探索区域 */
.exploration-section {
  /* 使用通用样式，这里无需额外定义 */
}

.exploration-cards {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 10rpx;
}

.exploration-card {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background-color: rgba(232, 245, 233, 0.6);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  height: 90rpx;
}

.exploration-card:active {
  transform: scale(0.98);
  background-color: rgba(232, 245, 233, 0.9);
}

.card-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.card-content {
  flex: 1;
}

.card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.card-description {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

/* 用户活动区域 */
.activity-section {
  /* 使用通用样式，这里无需额外定义 */
}

.activity-list {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}

.activity-item {
  display: flex;
  padding: 14rpx 0;
  border-bottom: 1rpx solid #eee;
  align-items: center;
  height: 60rpx;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-time {
  width: 140rpx;
  font-size: 22rpx;
  color: #888;
  padding-right: 16rpx;
}

.activity-content {
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.activity-text {
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
}

.activity-reward {
  font-size: 22rpx;
  color: #4CAF50;
  font-weight: bold;
}

/* 足迹列表样式 */
.footprints-section {
  /* 使用通用样式，无需设置额外margin */
}

.footprints-container {
  margin-top: 16rpx;
}

.footprints-scroll {
  white-space: nowrap;
  width: 100%;
}

.footprints-list {
  display: inline-flex;
  padding: 8rpx 0;
  align-items: center;
}

.footprint-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
  padding: 12rpx;
  width: 130rpx;
  height: 160rpx;
  background: rgba(249, 251, 231, 0.6);
  border: 1rpx solid #e6e6e6;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.footprint-card::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 6rpx;
  background: linear-gradient(to right, #a8e6cf, #dcedc1);
}

.footprint-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
  animation: footprint-pulse 2s infinite ease-in-out;
}

@keyframes footprint-pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.footprint-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.footprint-city {
  font-size: 22rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
}

.footprint-date {
  font-size: 18rpx;
  color: #888;
  text-align: center;
}

.footprints-more {
  text-align: center;
  color: #4caf50;
  font-size: 22rpx;
  margin-top: 16rpx;
  padding: 8rpx 0;
}

.empty-footprints {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0;
}

.empty-icon {
  font-size: 50rpx;
  margin-bottom: 16rpx;
  opacity: 0.7;
}

.empty-text {
  color: #999;
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

.empty-action {
  background-color: #f0f9e8;
  color: #4caf50;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
}

/* 系统设置区域 */
.settings-section {
  /* 使用通用样式，无需额外定义 */
}

.settings-list {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}

.settings-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
  height: 60rpx;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  width: 40rpx;
  text-align: center;
}

.settings-content {
  flex: 1;
}

.settings-text {
  font-size: 24rpx;
  color: #333;
}

.settings-arrow {
  color: #aaa;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.app-version {
  text-align: center;
  font-size: 20rpx;
  color: #999;
  margin-top: 20rpx;
  padding: 10rpx 0;
}

/* 关于我们弹窗样式 */
.about-dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.about-dialog {
  width: 80%;
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
  animation: dialogFadeIn 0.3s;
}

@keyframes dialogFadeIn {
  from { opacity: 0; transform: scale(0.9); }
  to { opacity: 1; transform: scale(1); }
}

.about-dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #eee;
}

.about-dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2e7d32;
}

.about-dialog-close {
  font-size: 40rpx;
  color: #999;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.about-dialog-content {
  padding: 30rpx 24rpx;
}

.about-app-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  text-align: center;
}

.about-app-version {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
  margin-left: 10rpx;
}

.about-app-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 24rpx;
  line-height: 1.6;
  text-align: justify;
}

.about-app-contact {
  font-size: 24rpx;
  padding: 10rpx 0;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.contact-label {
  color: #666;
}

.contact-value {
  color: #2e7d32;
  text-decoration: underline;
}

.about-app-copyright {
  font-size: 22rpx;
  color: #999;
  text-align: center;
  margin-top: 20rpx;
} 