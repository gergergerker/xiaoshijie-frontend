/* 足迹列表页面样式 */
.footprints-container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #fafafa;
  box-sizing: border-box;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  position: relative;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #f0f9e8;
  border-radius: 30rpx;
  margin-right: 30rpx;
}

.back-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
  color: #4caf50;
}

.back-text {
  font-size: 28rpx;
  color: #4caf50;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex-grow: 1;
  text-align: center;
  margin-right: 120rpx; /* 保持标题居中 */
}

.footprints-list {
  margin-top: 20rpx;
}

.footprint-item {
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.footprint-item::after {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  background: linear-gradient(to bottom, #a8e6cf, #dcedc1);
  border-top-left-radius: 16rpx;
  border-bottom-left-radius: 16rpx;
}

.footprint-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(249, 251, 231, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
}

.footprint-icon {
  font-size: 50rpx;
}

.footprint-info {
  flex-grow: 1;
}

.footprint-city {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.footprint-date {
  font-size: 26rpx;
  color: #888;
}

.footprint-arrow {
  color: #ccc;
  font-size: 36rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.action-btn {
  background-color: #4caf50;
  color: white;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(76, 175, 80, 0.2);
}

.footer {
  margin-top: 60rpx;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: #aaa;
} 