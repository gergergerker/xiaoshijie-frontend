.season-buttons {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 15rpx;
  position: relative;
  z-index: 2;
}

.season-button {
  width: 18%;
  padding: 14rpx 0;
  border-radius: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  transform: perspective(800rpx) rotateY(0deg);
}

.season-button:active {
  transform: perspective(800rpx) rotateY(10deg) scale(0.95);
}

.season-button::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(rgba(255, 255, 255, 0.2), transparent);
  pointer-events: none;
}

